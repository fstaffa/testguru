<%= javascript_include_tag :defaults %>

<% if flash[:error] -%>
<div id="error"><%= flash[:error] %></div>
<% end -%>

<h1>Výběr testu</h1>
<% form_tag :action=> 'process_url', :method=>'put' do %>
  <p>
  <%= label_tag :s, "Předmět" %>
  <%= select_tag 's', options_for_select(@courses),
    :onchange => remote_function(:url => {:action => 'get_topics'}, 
                                 :update => 'topic_id_container',
                                 :with => "$('s').serialize()") %>
  </p>
  <p>
  <div id="topic_id_container">
  </div>
  <p>
  <%= label_tag :q, "Počet otázek" %>
  <%= text_field_tag 'q', '', :onchange => "TestPositiveness(document.getElementById('q').value)"%>
  </p>
  <%= submit_tag 'Submit' %>
  </p>
<% end %>
<script type = "text/javascript:>
  document.getElementByName('commit').disabled = true;
</script>

