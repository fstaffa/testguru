<h1>Listing answers</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Value</th>
    <th>Correct</th>
    <th>Question code</th>
    <th>Question</th>
    <th>Choice</th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%=h answer.code %></td>
    <td><%=h answer.value %></td>
    <td><%=h answer.correct %></td>
    <td><%=h answer.question_code %></td>
    <td><%=h answer.question_id %></td>
    <td><%=h answer.choice %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New answer', new_answer_path %>