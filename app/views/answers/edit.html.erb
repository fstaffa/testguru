<h1>Editing answer</h1>

<% form_for(@answer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_area :value %>
  </p>
  <p>
    <%= f.label :correct %><br />
    <%= f.check_box :correct %>
  </p>
  <p>
    <%= f.label :question_code %><br />
    <%= f.text_field :question_code %>
  </p>
  <p>
    <%= f.label :question_id %><br />
    <%= f.text_field :question_id %>
  </p>
  <p>
    <%= f.label :choice %><br />
    <%= f.text_field :choice %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @answer %> |
<%= link_to 'Back', answers_path %>